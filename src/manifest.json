{
  "manifest_version": 3,
  "name": "Spam Chrome Extension",
  "description": "A chrome extension for SPAM",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "permissions": [
   
    "storage"
  ],
  "host_permissions": [
    "https://api.testnet.solana.com/*",
    "https://solana-testnet.g.allthatnode.com/*",
    "https://*.quiknode.pro/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
 
  "devtools_page": "devtools.html",
  
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "spam_character1.png"],
      "matches": ["<all_urls>"]
    }
  ]
  
}
