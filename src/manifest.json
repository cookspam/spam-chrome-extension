{
  "manifest_version": 3,
  "name": "Spam Chrome Extension",
  "description": "A chrome extension for SPAM",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "spam_character1.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "icons": {
    "128": "spam_character1.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "spam_character1.png"],
      "matches": []
    }
  ]
  
}
